<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0-windows;net472</TargetFrameworks>
	<LangVersion>10.0</LangVersion>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ImplicitUsings>enable</ImplicitUsings>
    <Title>Tategaki</Title>
    <Description>WPF Vertical Text Control Library</Description>
    <Copyright>Copyright © 2014-2024 EH500_Kintarou</Copyright>
    <Company>EH500_Kintarou</Company>
    <Authors>EH500_Kintarou</Authors>
	<VersionPrefix>3.0.1</VersionPrefix>
	<VersionSuffix></VersionSuffix>
	<PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
	<PackageReadmeFile>README.md</PackageReadmeFile>
	<RepositoryUrl>https://github.com/EH500-Kintarou/Tategaki</RepositoryUrl>
	<PackageTags>WPF;Tategaki;縦書き</PackageTags>
	<PackageProjectUrl>https://github.com/EH500-Kintarou/Tategaki</PackageProjectUrl>
	<PackageReleaseNotes>.NET Framework 4.7.2に対応</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\TypeLoader\TypeLoader.csproj" />
  </ItemGroup>

</Project>
